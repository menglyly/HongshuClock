package com.weimenglyly.ondrawdemo;

import android.content.Context;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.view.View;

public class DrawView extends View {

	public DrawView(Context context) {
		super(context);
		// TODO Auto-generated constructor stub
	}
	@Override
	protected void onDraw(Canvas canvas) {
		// TODO Auto-generated method stub
		super.onDraw(canvas);
		/*
		 * 1.Paint画笔，2.Canvas画布，
		 */
		Paint paint = new Paint();
		paint.setColor(Color.CYAN);//设置笔的颜色为红紫色
		
		canvas.drawText("画圆圈对比大小和锯齿效果", 12, 20, paint);
		canvas.drawCircle(50, 20, 12, paint);//小圆
		paint.setAntiAlias(true);//设置画笔锯齿效果，true就是去除，边框就会很粗糙
		canvas.drawCircle(120, 20, 12, paint);//大圆
		
		
		
		
	}

}
